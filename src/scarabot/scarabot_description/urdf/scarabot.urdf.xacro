<?xml version="1.0" ?>
<robot name="scarabot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>/scarabot</robotNamespace>
        </plugin>
    </gazebo>


    <!-- MACROS -->
<xacro:property name="m" value="1" />
<xacro:macro name="default_link_geometry">
    <geometry>
        <box size="0.04 0.04 0.6"/>
    </geometry>
</xacro:macro>

<xacro:macro name="revolute_link" params="number">
  <link name="revolute_link${number}">
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.25"/>
      <geometry>
        <cylinder radius="0.15" length="0.5"/>
      </geometry>
    </collision>

    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.25"/>
      <geometry>
        <cylinder radius="0.15" length="0.5"/>
      </geometry>
    </visual>

    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.25"/>
    <mass value="1"/>
    <inertia
      ixx="0" ixy="0.0" ixz="0.0"
      iyy="0" iyz="0.0"
      izz="0"/>
    </inertial>
  </link>
<gazebo reference="revolute_link${number}">
  <material>Gazebo/Grey</material>
</gazebo>
</xacro:macro>
<xacro:macro name="vertical_link" params="number">
  <link name="vertical_link${number}">
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <geometry>
        <box size="0.04 0.04 0.6"/>
      </geometry>
    </collision>

    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <xacro:default_link_geometry/>
    </visual>

    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
    <mass value="${m}"/>
    <inertia
      ixx="0" ixy="0.0" ixz="0.0"
      iyy="0" iyz="0.0"
      izz="0"/>
    </inertial>
  </link>
</xacro:macro>
<xacro:macro name="horizontal_link" params="number">
  <link name="horizontal_link${number}">
    <collision>
      <origin rpy="0 0 0" xyz="0.25 0 0"/>
      <geometry>
        <box size="0.5 0.04 0.04"/>
      </geometry>
    </collision>

    <visual>
      <origin rpy="0 0 0" xyz="0.25 0 0"/>
      <geometry>
        <box size="0.5 0.04 0.04"/>
      </geometry>
    </visual>

    <inertial>
      <origin rpy="0 0 0" xyz="0.25 0 0"/>
    <mass value="1"/>
    <inertia
      ixx="0" ixy="0.0" ixz="0.0"
      iyy="0" iyz="0.0"
      izz="0"/>
    </inertial>
  </link>
</xacro:macro>
<xacro:macro name="prismatic_link">
  <link name="prismatic_link">
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
       <origin rpy="0 0 0" xyz="0 0 0.05"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>

    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
    <mass value="0.001"/>
    <inertia
      ixx="0" ixy="0.0" ixz="0.0"
      iyy="0" iyz="0.0"
      izz="0.1"/>
    </inertial>
  </link>
    <gazebo reference="prismatic_link">
  <material>Gazebo/Grey</material>
</gazebo>
</xacro:macro>

